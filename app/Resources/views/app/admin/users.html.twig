{% extends 'app/admin/admin.html.twig' %}
{% block title %}Admin Panel{% endblock %}
{% block admin_stylesheets %}{% endblock %}
{% block admin_body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            {% for user in result %}
            <td>{{ user.username }}</td>
            <td>{{ user.firstName }}</td>
            <td>{{ user.lastName }}</td>
            <td>{{ user.email }}</td>
            <td>
                <button class="status btn btn-{% if user.active %}danger{% else %}default{% endif %}"
                        style="float: right; margin-right: 5px;">{% if user.active %}Deactivate{% else %}Activate{% endif %}
                </button>
                <button class="btn btn-warning" style="float: right; margin-right: 5px;">Add Ban</button>
                <button class="btn btn-default" style="float: right; margin-right: 5px;">Edit</button>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ include('app/template/pager.html.twig', { 'pager_url': '/admin_panel/users/' , 'total_pages':total_pages, 'current_page' : current_page}) }}
{% endblock %}
    {% block admin_javasript %}
    {% endblock %}